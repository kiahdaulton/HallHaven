@using HallHaven.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@using HallHaven.Models;
@using System.Security.Claims;


@*@using Microsoft.AspNetCore.Identity
@using HallHaven.Areas.Identity.Data*@

@inject SignInManager<HallHavenUser> _signInManager
@inject UserManager<HallHavenUser> _userManager
@inject HallHaven.Data.HallHavenContext _context

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Hall Haven</h1>
    <img style="width: 200px;" src="/images/HallHavenLogov2.jpg" alt="Hall Haven Logo" />
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <p><a asp-action="form">Test form</a></p>
</div>

    <div class="d-flex justify-content-center">
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <img style="width: auto; height: 300px;" src="/images/threeCollegeStudents.jpg" alt="Three colleges students sitting with books." />
            </div>
            <div class="col-12 d-flex justify-content-center" style="margin: 25px 0px 25px 0px;">
                <button class="btn btn-primary">Search for a Roommate</button>
            </div>
        </div>
    </div>

<div class="album py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @{
                var identityUser = await _userManager.GetUserAsync(User);

            }

            @if (_signInManager.IsSignedIn(User))
            {
                @if (Model.Count != null)
                {
                    @foreach (User user in Model)
                    {
                        <div class="col">
                            <div class="card shadow-sm">

                                @if (_userManager.GetUserAsync(User).Result.ProfilePicture != null)
                                {
                                    <img class="bd-placeholder-img card-img-top" width="100%" height="225"
                                    src="data:image/*;base64,@(Convert.ToBase64String(_userManager.GetUserAsync(User).Result.ProfilePicture))">
                                }


                                <div class="card-body">
                                    <p class="card-text">
                                        <div class="d-flex justify-content-center">@user.DisplayName</div>
                                        <div>@user.UserId</div>
                                        <div>@user.Gender.Gender1</div>
                                        <div>Hall</div>
                                        <div>Classification</div>
                                        <div>Percentage</div>
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center" style="margin-top: 15px;">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-default"><img class="icon" src="/images/user.png" alt="User Icon" /></button>
                                            <button type="button" class="btn btn-default"><img class="icon" src="/images/mail.png" alt="Mail Icon" /></button>
                                            <button type="button" class="btn btn-default"><img class="icon" src="/images/calendar.png" alt="Calendar Icon" /></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div>There are no users.</div>
                }
            
            }

        </div>
    </div>
</div>