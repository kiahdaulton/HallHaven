@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* dynamically get dorms by selected credit hour *@
    <script>
        $(document).ready(function () {
            $("#CreditHourId").change(function () {
                var selectedCreditHourId = $(this).val();
                $.ajax({
                    type: "GET",
                    url: "/Controller/GetDormsByCreditHourAsync?selectedCreditHourId=" + selectedCreditHourId,
                    success: function (data) {
                        $("#DormId").empty();
                        $.each(data, function (index, item) {
                            $("#DormId").append('<option value="' + item.value + '">' + item.text + '</option>');
                        });
                    }
                });
            });
        });
    </script>

}
